<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        style="@style/Container">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Situation Headline" android:gravity="center"
              android:textSize="25sp" android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:id="@+id/title"
            style="@style/HSText"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:gravity="center"
                  android:layout_marginTop="15dp">
        <ImageView android:layout_width="wrap_content" android:layout_height="125dp"
                   android:src="@drawable/apl2" android:layout_marginBottom="10dp" android:layout_weight="1"
                   android:id="@+id/im1"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="125dp"
                   android:src="@drawable/apl2" android:layout_marginBottom="10dp" android:layout_weight="1"
                   android:id="@+id/im2"/>
    </LinearLayout>

    <View style="@style/Line"/>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/companion_decision" android:textSize="20sp" android:id="@+id/narrative"
            style="@style/HSText" android:gravity="center"
            android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>





</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/Container"
        >

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="Situation Headline" android:gravity="center"
              android:textSize="25sp" android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:id="@+id/title" style="@style/HSText"/>

    <ImageView android:layout_width="wrap_content" android:layout_height="200dp"
               android:src="@drawable/apl2" android:layout_marginBottom="10dp" android:id="@+id/image"/>

    <View style="@style/Line"/>


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/contnue" android:layout_gravity="right" android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" android:id="@+id/continue_button"
                android:textColor="#BBBBBB"/>
    </RelativeLayout>


</LinearLayout>